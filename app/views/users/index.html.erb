<p id="notice"><%= notice %></p>

<h1>Adminler</h1>

<table>
  <thead>
    <tr>
      <th>E-Mail</th>
      <th>Giriş Sayısı</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |admin| %>
      <tr>
        <td><%= admin.email %></td>
        <td><%= admin.sign_in_count %></td>
        <td><%= link_to 'Göster', user_path(admin) %></td>
        <td><%= link_to 'Düzenle', edit_user_path(admin) %></td>
        <td><%= link_to 'Sil', users_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

