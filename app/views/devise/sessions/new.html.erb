<h2>Yönetici Girişi</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mdl-grid" style="width: 40%">
  <div class="field mdl-textfield mdl-js-textfield mdl-cell mdl-cell--12-col">
    <%= f.label "E-Mail", class: "mdl-textfield__label" %><br />
    <%= f.email_field :email, class: "mdl-textfield__input" %>
  </div>

    <div class="field mdl-textfield mdl-js-textfield mdl-cell mdl-cell--12-col">
      <%= f.label "Parola", class: "mdl-textfield__label" %><br />
      <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect">
        <%= f.check_box :remember_me, class: "mdl-checkbox__input"%>
        <span class="mdl-checkbox__label" style="float:left">Beni Hatırla !</span>
      </label>
    <% end -%>

    <div class="actions mdl-cell mdl-cell--12-col">
      <%= f.submit "GİRİŞ" , class: "mdl-button mdl-js-button mdl-button--raised mdl-button--accent mdl-js-ripple-effect" %>
    </div>
  </div>
<% end %>

