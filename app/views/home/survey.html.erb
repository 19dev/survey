<p><%= @pid %><p>
<p id="notice"><%= notice %></p>

<p>
  <strong>Anket Adı:</strong>
  <%= @poll.poll_name %>
</p>

<p>
  <strong>Açıklaması:</strong>
  <%= @poll.poll_description %>

</p>
<% if @poll_questions.length != 0 %>
<table class="mdl-data-table mdl-js-data-table">
  <thead>
    <tr>
      <th class="mdl-data-table__cell--non-numeric">Soru</th>
      <th class="mdl-data-table__cell--non-numeric" colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <%= will_paginate @poll_questions, :params => { :passcod => params[:passcod] }%>
    <% @poll_questions.each do |poll_question| %>
    <div class="mdl-grid">
    <% poll_question.answers.each do |question| %>
    	<div class="mdl-cell mdl-cell--6-col">  
			<%= image_tag question.img.url,style:"width:100%;height:100%;"%>
			<label for="chkbox1">
		  <input type="checkbox" id="chkbox1">
		</label>
    	</div>
		<%end%>
	</div>
    <% end %>
   <%= will_paginate @poll_questions %>
  </tbody>
</table>
<% else %>
  <p>
    Bu ankette hiç bir soru bulunmuyor !
  </p>
<% end %>





