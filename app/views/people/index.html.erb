<p id="notice"><%= notice %></p>

<h2>Kişiler</h2>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= link_to 'Göster', person %></td>
        <td><%= link_to 'Düzenle', edit_person_path(person), class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" %></td>
        <td><%= link_to 'Sil', person, method: :delete, data: { confirm: 'Are you sure?' }, class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

