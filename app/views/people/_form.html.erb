<%= simple_form_for(@person) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <%=f.input :person_first_name %>
  <%=f.input :person_last_name %>
  <%=f.input :person_birthday %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Kaydet", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--accent mdl-js-ripple-effect" %>
  </div>
<% end %>
