<%= form_for(@user, url: admin_users_path) do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this admin from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="mdl-grid" style="width: 40%">
  <div class="field mdl-textfield mdl-js-textfield mdl-cell mdl-cell--12-col">
    <%= f.label "E-Mail:", class: "mdl-textfield__label" %><br>
    <%= f.text_field :email, class: "mdl-textfield__input"%>
  </div>
  <div class="field mdl-textfield mdl-js-textfield mdl-cell mdl-cell--12-col">
    <%= f.label "Parola:", class: "mdl-textfield__label"%><br>
    <%= f.password_field :password, class: "mdl-textfield__input" %>
  </div>
  <div class="field mdl-textfield mdl-js-textfield mdl-cell mdl-cell--12-col">
    <%= f.label "Parola Tekrar:", class: "mdl-textfield__label"%><br>
    <%= f.password_field :password_confirmation, class: "mdl-textfield__input" %>
  </div>
  <div class="actions mdl-cell mdl-cell--12-col">
    <%= f.submit "Ekle", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--accent mdl-js-ripple-effect"%>
  </div>

</div>


<% end %>
